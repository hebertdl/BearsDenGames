@using BearsDenGames.Models.Battleship

    @foreach (var cell in ShipCells)
    {
        <td class="BsShipStatus-Cell @ShipCellStyle(cell)">
            <div class="BsCellContainer">
                <div class=" @CellStyle(cell)"></div>
            </div>&nbsp;
        </td>
    }

@code {

    [Parameter]
    public Ship? Ship { get; set; }

    private List<BoardCell> ShipCells => (Ship?.ShipCells != null ? Ship?.ShipCells : new()) ??  new();
    
    private string ShipCellStyle(BoardCell cell)
    {
        var str = cell.ShipCellStyle(false, GameState.Ready)
            .Replace("North", "West")
            .Replace("South", "West")
            .Replace("East", "West");
        Console.WriteLine(str);
        return str;
    }
    private string CellStyle(BoardCell cell)
    {
        return cell.CellStyle().Replace("BsCellCircle", "BsCellStatusCircle");

    }
}